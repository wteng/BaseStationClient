<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.wt.basestationclient.RecordScrollingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/recordTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="信息录入"
            android:textColor="#c3c300"
            android:textSize="50px"
            />

        <LinearLayout
            android:id="@+id/recordStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基站名称："
                android:textColor="#c3c300"
                android:textSize="50px"
                />

            <EditText
                android:id="@+id/ed_station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基站县区："
                android:textColor="#c3c300"
                android:textSize="50px"
                />

            <EditText
                android:id="@+id/ed_station_name_qu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recordStationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基站具体地址："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="经度："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordLatitudeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="纬度："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordLongtitudeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基站平台个数："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordPlatNumET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="天线所在平台："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordTianxianPlatET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="方位角："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordFangweijiaoET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="机械下倾角："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordJixieXQJET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="电子下倾角："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordDianziXQJET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="基站高度："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordStationHeightET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否美化天线："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordBeautTianxianET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="美化天线类型："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordTianxianTypeET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="所在楼层："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordFloorET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="天线厂家："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordTianxianCJET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="天线型号："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordTianxianModelET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="RRU所在位置："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordRRULocationET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否有C网设备："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordHasCnetDeviceET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="C网天线型号："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordCNetModelET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否拉远："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordHasFartherET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="机房共享："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordRoomShareET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否有空调："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordHasAirConditioningET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="是否有蓄电池："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordHasBatteryET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="验收存在问题："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordQuestionET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="图片："
                android:textColor="#c3c300"
                android:textSize="50px"
                />
            <EditText
                android:id="@+id/recordImgET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <Button
            android:id="@+id/recordBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始录入"
            android:gravity="center"
            android:background="#00ff00"
            android:layout_margin="15dp"
            />
    </LinearLayout>


</ScrollView>
